#!/bin/bash

RED='\e[41m'
BLUE='\e[44m'
ORANGE='\e[46m'
NC='\e[0m'
[[  $BROWSER && ${BROWSER-x} ]] && browser=$BROWSER || browser='firefox'
function webinterface {
$BROWSER http://localhost:631
}
function main {
    while true; do
    clear
    echo ""
    echo -e "                       ::Printers::  "
    echo -e " ┌─────────────────────────────────────────────────────────────┐"
    echo -e " │    1   Add printer                  2   Remove printer      │"
    echo -e " │    3   Web interface                4   Add scanner         │"
    echo -e " │    5   Print                        6   Scan                │"    
    echo -e " └─────────────────────────────────────────────────────────────┘"
    echo -e "              Select a number and press [Enter] - 0   Exit"
    echo ""
    read -s -n1 choix
    case $choix in
        1)
            echo
            add_printer
            echo ""
            ;;
        2)
            echo
            remove_printer
            echo ""
            ;;
        3)
            echo
            webinterface
            echo ""
            ;;
        4)
            echo
            add_scanner
            echo ""
            ;;
        5)
            echo
            print_file
            echo ""
            ;;
        6)
            echo
            scanner
            echo ""
            ;;
        7)
            echo
            alsamixer
            echo ""
            ;;
        8)
            echo
            system-configuration
            echo ""
            ;;
        9)
            echo
            system-setup
            echo ""
            ;;
        0)
            clear && exit
            read
            ;;
        *)
            echo -e "$RED Wrong option $NC"
            echo "Wait and try again later..."
            echo ""
            sleep 3
            clear
            ;;
    esac
    done
fi
}

webinterface
